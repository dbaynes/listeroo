<h1>Listeroo Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Status</th>
      <th>Date Created</th>
      <th>Last Updated</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |t| %>
		
      <tr>
        <td><%=t.taskname%>
	 			<td><%=t.taskstatus%>
				<td><%=t.created_at.strftime("%m/%d/%Y")%>
				<td><%=t.updated_at%>
				<td><%= link_to 'Show', t %></td>
        <td><%= link_to 'Edit', edit_task_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
